---
import Layout from '../../layouts/Layout.astro'
import Navigation from '../../components/Navigation.astro'
import Hero from '../../components/Hero.astro'
import { useTranslations } from '../../utils/i18n'

const lang = 'ar'
const t = useTranslations(lang)

// Get language from URL parameter or default to Arabic
const urlLang = Astro.url.searchParams.get('lang') as 'ar' | 'en' | null
const currentLang = urlLang && ['ar', 'en'].includes(urlLang) ? urlLang : 'ar'

const title = t('common.companyName', currentLang)
const description = t('common.tagline', currentLang)
---

<Layout title={title} description={description} lang={currentLang}>
	<Navigation lang={currentLang} />
	
	<!-- Ultimate 10/10 Hero Section -->
	<Hero lang={currentLang} />
</Layout>
