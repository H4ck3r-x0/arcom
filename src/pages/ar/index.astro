---
import Layout from '../../layouts/Layout.astro'
import Navigation from '../../components/Navigation.astro'
import Hero from '../../components/Hero.astro'
import { useTranslations } from '../../utils/i18n'

const lang = 'ar'
const t = useTranslations(lang)

// Get language from URL parameter or default to Arabic
const urlLang = Astro.url.searchParams.get('lang') as 'ar' | 'en' | null
const currentLang = urlLang && ['ar', 'en'].includes(urlLang) ? urlLang : 'ar'

const title = t('common.companyName', currentLang)
const description = t('common.tagline', currentLang)
---

<Layout title={title} description={description} lang={currentLang}>
	<Navigation lang={currentLang} />
	
	<!-- Ultimate 10/10 Hero Section -->
	<Hero lang={currentLang} />
	
	<!-- About Section -->
	<section id="about" class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Content will be redesigned -->
		</div>
	</section>
	
	<!-- Services Section -->
	<section id="services" class="py-20 bg-neutral-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Content will be redesigned -->
		</div>
	</section>

	
	<!-- Contact Section -->
	<section id="contact" class="section-padding bg-gradient-to-br from-neutral-900 via-primary-900 to-neutral-800">
		<div class="container-custom">
			<div class="text-center mb-16">
				<h2 class="heading-lg text-white text-shadow mb-6" lang={currentLang}>{t('contact.title', currentLang)}</h2>
				<p class="text-xl text-neutral-200 max-w-3xl mx-auto" lang={currentLang}>
					{t('contact.subtitle', currentLang)}
				</p>
			</div>
			
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<!-- Contact Info -->
				<div class="space-y-8">
					<div class="glass-card">
						<div class="flex items-center gap-4 mb-4">
							<div class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</div>
							<div>
								<h3 class="text-xl font-semibold text-white" lang={currentLang}>{t('contact.email.title', currentLang)}</h3>
								<p class="text-neutral-300 ltr-content">info@arcom.sa</p>
							</div>
						</div>
					</div>
					
					<div class="glass-card">
						<div class="flex items-center gap-4 mb-4">
							<div class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
								</svg>
							</div>
							<div>
								<h3 class="text-xl font-semibold text-white" lang={currentLang}>{t('contact.website.title', currentLang)}</h3>
								<p class="text-neutral-300 ltr-content">www.arcom.sa</p>
							</div>
						</div>
					</div>
					
					<div class="glass-card">
						<div class="flex items-center gap-4 mb-4">
							<div class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
								</svg>
							</div>
							<div>
								<h3 class="text-xl font-semibold text-white" lang={currentLang}>{t('contact.location.title', currentLang)}</h3>
								<p class="text-neutral-300" lang={currentLang}>{t('contact.location.address', currentLang)}</p>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Contact Form -->
				<div class="glass-card">
					<h3 class="text-2xl font-bold text-white mb-8 text-center" lang={currentLang}>{t('contact.form.title', currentLang)}</h3>
					<form class="space-y-6">
						<div>
							<label class="form-label text-white" lang={currentLang}>{t('contact.form.name', currentLang)}</label>
							<input type="text" class="form-input bg-white/10 border-white/20 text-white placeholder-neutral-400" placeholder={t('contact.form.namePlaceholder', currentLang)} required>
						</div>
						<div>
							<label class="form-label text-white" lang={currentLang}>{t('contact.form.email', currentLang)}</label>
							<input type="email" class="form-input bg-white/10 border-white/20 text-white placeholder-neutral-400" placeholder={t('contact.form.emailPlaceholder', currentLang)} required>
						</div>
						<div>
							<label class="form-label text-white" lang={currentLang}>{t('contact.form.phone', currentLang)}</label>
							<input type="tel" class="form-input bg-white/10 border-white/20 text-white placeholder-neutral-400" placeholder={t('contact.form.phonePlaceholder', currentLang)}>
						</div>
						<div>
							<label class="form-label text-white" lang={currentLang}>{t('contact.form.service', currentLang)}</label>
							<select class="form-input bg-white/10 border-white/20 text-white">
								<option value="" class="text-neutral-900">{t('contact.form.selectService', currentLang)}</option>
								<option value="operations" class="text-neutral-900">{t('services.operations.title', currentLang)}</option>
								<option value="hospitality" class="text-neutral-900">{t('services.hospitality.title', currentLang)}</option>
								<option value="housekeeping" class="text-neutral-900">{t('services.housekeeping.title', currentLang)}</option>
								<option value="airport" class="text-neutral-900">{t('services.airport.title', currentLang)}</option>
								<option value="landscaping" class="text-neutral-900">{t('services.landscaping.title', currentLang)}</option>
								<option value="homecare" class="text-neutral-900">{t('services.homecare.title', currentLang)}</option>
								<option value="renovations" class="text-neutral-900">{t('services.renovations.title', currentLang)}</option>
								<option value="pestcontrol" class="text-neutral-900">{t('services.pestcontrol.title', currentLang)}</option>
							</select>
						</div>
						<div>
							<label class="form-label text-white" lang={currentLang}>{t('contact.form.message', currentLang)}</label>
							<textarea class="form-input bg-white/10 border-white/20 text-white placeholder-neutral-400" rows="4" placeholder={t('contact.form.messagePlaceholder', currentLang)} required></textarea>
						</div>
						<button type="submit" class="btn-primary w-full">
							{t('contact.form.submit', currentLang)}
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Footer -->
