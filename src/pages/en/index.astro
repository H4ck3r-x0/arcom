---
import Layout from '../../layouts/Layout.astro'
import Navigation from '../../components/Navigation.astro'
import Hero from '../../components/Hero.astro'
import { useTranslations } from '../../utils/i18n'

const lang = 'en'
const t = useTranslations(lang)

// Get language from URL parameter or default to English
const urlLang = Astro.url.searchParams.get('lang') as 'ar' | 'en' | null
const currentLang = urlLang && ['ar', 'en'].includes(urlLang) ? urlLang : 'en'

const title = t('common.companyName', currentLang)
const description = t('common.tagline', currentLang)
---

<Layout title={title} description={description} lang={currentLang}>
	<Navigation lang={currentLang} />
	
	<!-- Ultimate 10/10 Hero Section -->
	<Hero lang={currentLang} />
	
	<!-- About Section -->
	<section id="about" class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-6">{t('about.title')}</h2>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				<!-- Vision -->
				<div class="about-card bg-gradient-to-br from-primary-50 to-primary-100 p-8 rounded-2xl">
					<div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-6">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
						</svg>
					</div>
					<h3 class="text-2xl font-bold text-neutral-900 mb-4">{t('about.vision.title')}</h3>
					<p class="text-neutral-700 leading-relaxed">{t('about.vision.description')}</p>
				</div>

				<!-- Mission -->
				<div class="about-card bg-gradient-to-br from-secondary-50 to-secondary-100 p-8 rounded-2xl">
					<div class="w-16 h-16 bg-gradient-to-br from-secondary-500 to-secondary-600 rounded-xl flex items-center justify-center mb-6">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
						</svg>
					</div>
					<h3 class="text-2xl font-bold text-neutral-900 mb-4">{t('about.mission.title')}</h3>
					<p class="text-neutral-700 leading-relaxed">{t('about.mission.description')}</p>
				</div>

				<!-- Values -->
				<div class="about-card bg-gradient-to-br from-accent-50 to-accent-100 p-8 rounded-2xl">
					<div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-xl flex items-center justify-center mb-6">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
						</svg>
					</div>
					<h3 class="text-2xl font-bold text-neutral-900 mb-4">{t('about.values.title')}</h3>
					<p class="text-neutral-700 leading-relaxed">{t('about.values.description')}</p>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Services Section -->
	<section id="services" class="py-20 bg-neutral-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-6">{t('services.title')}</h2>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
				<!-- Operations & Maintenance -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.operations.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.operations.description')}</p>
				</div>

				<!-- Hospitality & Events -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.hospitality.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.hospitality.description')}</p>
				</div>

				<!-- Housekeeping -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v2H8V5z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.housekeeping.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.housekeeping.description')}</p>
				</div>

				<!-- Airport Services -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.airport.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.airport.description')}</p>
				</div>

				<!-- Landscaping -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.landscaping.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.landscaping.description')}</p>
				</div>

				<!-- Total Home Care -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.homecare.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.homecare.description')}</p>
				</div>

				<!-- Renovations -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.renovations.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.renovations.description')}</p>
				</div>

				<!-- Pest Control -->
				<div class="service-card group bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
					<div class="w-16 h-16 bg-gradient-to-br from-teal-500 to-teal-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-neutral-900 mb-3">{t('services.pest.title')}</h3>
					<p class="text-neutral-600 text-sm leading-relaxed">{t('services.pest.description')}</p>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Contact Section -->
	<section id="contact" class="py-20 bg-gradient-to-br from-neutral-900 via-neutral-800 to-primary-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">{t('contact.title')}</h2>
				<p class="text-xl text-neutral-300">{t('contact.subtitle')}</p>
			</div>

			<div class="grid lg:grid-cols-2 gap-12">
				<!-- Contact Form -->
				<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-8">
					<form class="space-y-6">
						<div class="grid md:grid-cols-2 gap-6">
							<div>
								<label for="name" class="block text-sm font-medium text-white mb-2">{t('contact.form.name')}</label>
								<input type="text" id="name" name="name" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent">
							</div>
							<div>
								<label for="email" class="block text-sm font-medium text-white mb-2">{t('contact.form.email')}</label>
								<input type="email" id="email" name="email" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent">
							</div>
						</div>
						<div class="grid md:grid-cols-2 gap-6">
							<div>
								<label for="phone" class="block text-sm font-medium text-white mb-2">{t('contact.form.phone')}</label>
								<input type="tel" id="phone" name="phone" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent">
							</div>
							<div>
								<label for="service" class="block text-sm font-medium text-white mb-2">{t('contact.form.service')}</label>
								<select id="service" name="service" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent">
									<option value="">{t('contact.form.service')}</option>
									<option value="operations">{t('services.operations.title')}</option>
									<option value="hospitality">{t('services.hospitality.title')}</option>
									<option value="housekeeping">{t('services.housekeeping.title')}</option>
									<option value="airport">{t('services.airport.title')}</option>
									<option value="landscaping">{t('services.landscaping.title')}</option>
									<option value="homecare">{t('services.homecare.title')}</option>
									<option value="renovations">{t('services.renovations.title')}</option>
									<option value="pest">{t('services.pest.title')}</option>
								</select>
							</div>
						</div>
						<div>
							<label for="message" class="block text-sm font-medium text-white mb-2">{t('contact.form.message')}</label>
							<textarea id="message" name="message" rows="4" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"></textarea>
						</div>
						<button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-300">
							{t('contact.form.submit')}
						</button>
					</form>
				</div>

				<!-- Contact Information -->
				<div class="space-y-8">
					<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6">
						<div class="flex items-center mb-4">
							<div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center mr-4">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-lg font-semibold text-white">Address</h3>
								<p class="text-neutral-300">{t('contact.info.address')}</p>
							</div>
						</div>
					</div>

					<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6">
						<div class="flex items-center mb-4">
							<div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center mr-4">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-lg font-semibold text-white">Phone</h3>
								<p class="text-neutral-300">{t('contact.info.phone')}</p>
							</div>
						</div>
					</div>

					<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6">
						<div class="flex items-center mb-4">
							<div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center mr-4">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-lg font-semibold text-white">Email</h3>
								<p class="text-neutral-300">{t('contact.info.email')}</p>
							</div>
						</div>
					</div>

					<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6">
						<div class="flex items-center mb-4">
							<div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center mr-4">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-lg font-semibold text-white">Business Hours</h3>
								<p class="text-neutral-300">{t('contact.info.hours')}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Footer -->
	<footer class="bg-neutral-900 text-white py-12">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid md:grid-cols-3 gap-8">
				<!-- Company Info -->
				<div>
					<div class="flex items-center mb-6">
						<div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-600 rounded-lg flex items-center justify-center mr-3">
							<span class="text-white font-bold text-lg">A</span>
						</div>
						<div>
							<div class="text-xl font-bold">{t('hero.title')}</div>
							<div class="text-sm text-neutral-400">ARCOM</div>
						</div>
					</div>
					<p class="text-neutral-400 mb-6">{t('hero.description')}</p>
					<div class="flex space-x-4">
