							</svg>
						</a>
					</div>
				</div>

				<!-- Services -->
				<div>
					<h3 class="text-lg font-semibold mb-6">{t('footer.services')}</h3>
					<ul class="space-y-3">
						<li><a href="#services" class="text-neutral-400 hover:text-white transition-colors duration-300">{t('services.operations.title')}</a></li>
						<li><a href="#services" class="text-neutral-400 hover:text-white transition-colors duration-300">{t('services.hospitality.title')}</a></li>
						<li><a href="#services" class="text-neutral-400 hover:text-white transition-colors duration-300">{t('services.housekeeping.title')}</a></li>
						<li><a href="#services" class="text-neutral-400 hover:text-white transition-colors duration-300">{t('services.airport.title')}</a></li>
						<li><a href="#services" class="text-neutral-400 hover:text-white transition-colors duration-300">{t('services.landscaping.title')}</a></li>
						<li><a href="#services" class="text-neutral-400 hover:text-white transition-colors duration-300">{t('services.homecare.title')}</a></li>
					</ul>
				</div>

				<!-- Contact -->
				<div>
					<h3 class="text-lg font-semibold mb-6">{t('footer.contact')}</h3>
