<script>
  // Professional fallback for browsers that don't support ES modules or if CDN fails
  window.addEventListener('DOMContentLoaded', () => {
    // Simple and elegant stat reveal fallback
    const observeStats = () => {
      const statCards = document.querySelectorAll('.enterprise-stat-card');
      if (!statCards.length) return;

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && entry.target) {
            const numberElement = entry.target.querySelector('.stat-number-enterprise[data-target]');
            if (numberElement && !numberElement.hasAttribute('data-fallback-animated')) {
              numberElement.setAttribute('data-fallback-animated', 'true');
              
              // Simple, professional fade-in
              if (numberElement instanceof HTMLElement) {
                numberElement.style.opacity = '0';
                numberElement.style.transform = 'translateY(10px)';
                numberElement.style.transition = 'all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                
                setTimeout(() => {
                  numberElement.style.opacity = '1';
                  numberElement.style.transform = 'translateY(0)';
                }, 100);
              }
            }
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.3 });
      
      statCards.forEach(card => observer.observe(card));
    };

    // Professional timing - after entrance animations complete
    setTimeout(observeStats, 2500);
  });
</script> 