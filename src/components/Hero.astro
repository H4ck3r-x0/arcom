---
import { useTranslations } from '../utils/i18n';

export interface Props {
  lang: 'ar' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<!-- REVOLUTIONARY FORTUNE 500 HERO SECTION -->
<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black isolate pt-28">
  <!-- CINEMATIC BACKGROUND SYSTEM -->
  <div class="absolute inset-0 -z-10">
    <!-- Ultra-Premium Base Gradient - ARCOM Brand Colors (softened) -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900/80 via-[#047C46]/70 to-black/80"></div>
    <!-- Advanced Mesh Gradient Network - ARCOM Colors (reduced opacity) -->
    <div class="absolute inset-0 bg-gradient-to-tr from-[#047C46]/20 via-transparent to-[#71D9F5]/10"></div>
    <div class="absolute inset-0 bg-gradient-to-bl from-[#71AFF5]/10 via-transparent to-[#07D580]/10"></div>
    <div class="absolute inset-0 bg-radial-gradient from-[#07D580]/10 via-transparent to-[#047C46]/30"></div>
    <!-- Authentic ARCOM Brand Pattern - More Subtle -->
    <div class="absolute inset-0 opacity-4">
      <svg class="w-full h-full" viewBox="0 0 1200 1000" preserveAspectRatio="xMidYMid slice">
        <defs>
          <pattern id="arcomAuthentic" x="0" y="0" width="180" height="180" patternUnits="userSpaceOnUse">
            <path d="M30 25 L40 15 L50 25 L40 35 Z" fill="#047C46" opacity="0.2"/>
            <path d="M85 30 L95 20 L105 30 L95 40 Z" fill="#0A7C4A" opacity="0.18"/>
