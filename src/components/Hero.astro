            <path d="M125 65 L135 55 L145 65 L135 75 Z" fill="#ffffff" opacity="0.08"/>
            <path d="M165 80 L173 72 L181 80 L173 88 Z" fill="#0A8B52" opacity="0.10"/>
            <path d="M45 115 L55 105 L65 115 L55 125 Z" fill="#07D580" opacity="0.13"/>
            <path d="M100 120 L110 110 L120 120 L110 130 Z" fill="#047C46" opacity="0.15"/>
            <path d="M5 125 L13 117 L21 125 L13 133 Z" fill="#ffffff" opacity="0.06"/>
            <path d="M25 160 L35 150 L45 160 L35 170 Z" fill="#0A7C4A" opacity="0.10"/>
            <path d="M80 155 L90 145 L100 155 L90 165 Z" fill="#ffffff" opacity="0.05"/>
            <path d="M135 165 L145 155 L155 165 L145 175 Z" fill="#07D580" opacity="0.10"/>
          </pattern>
          
          <!-- Subtle Background Chevrons -->
          <pattern id="arcomSubtle" x="0" y="0" width="240" height="200" patternUnits="userSpaceOnUse">
            <!-- Larger, more spread out chevrons -->
            <path d="M60 50 L75 35 L90 50 L75 65 Z" fill="#047C46" opacity="0.15" transform="rotate(0 75 50)"/>
            <path d="M180 40 L195 25 L210 40 L195 55 Z" fill="#ffffff" opacity="0.1" transform="rotate(0 195 40)"/>
            <path d="M30 120 L45 105 L60 120 L45 135 Z" fill="#07D580" opacity="0.2" transform="rotate(0 45 120)"/>
            <path d="M150 130 L165 115 L180 130 L165 145 Z" fill="#0A8B52" opacity="0.18" transform="rotate(0 165 130)"/>
            <path d="M200 180 L212 168 L224 180 L212 192 Z" fill="#ffffff" opacity="0.12" transform="rotate(0 212 180)"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#arcomSubtle)"/>
        <rect width="100%" height="100%" fill="url(#arcomAuthentic)"/>
      </svg>
    </div>
    
    <!-- Cinematic Overlay System (softened) -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-transparent to-black/40"></div>
    <div class="absolute inset-0 bg-radial-gradient from-transparent via-transparent to-black/60"></div>
  </div>

  <!-- PREMIUM CONTENT SYSTEM -->
  <div class="relative container-custom flex-1 flex flex-col items-center justify-center text-center text-white" dir={lang === 'ar' ? 'rtl' : 'ltr'}>
    <div class="mb-10 md:mb-14 space-y-5 md:space-y-7">
      <h1 class={`hero-title-enterprise animate-hero-fade text-5xl md:text-7xl font-extrabold leading-tight drop-shadow-xl ${lang === 'ar' ? 'font-arabic' : 'font-archivo'}`} style="text-shadow:0 4px 24px rgba(7,213,128,0.18),0 2px 8px rgba(0,0,0,0.18);">
        <span class="block mb-2">{lang === 'ar' ? 'أركوم' : 'ARCOM'}</span>
        <span class="block text-2xl md:text-3xl font-semibold text-[#F5FCF8] opacity-90">{lang === 'ar' ? 'الشركة العربية المعتمدة لإدارة المرافق' : 'The Accredited Arabian Company'}</span>
        <p class={`text-[#F5FCF8]/80 max-w-3xl mx-auto leading-relaxed ${lang === 'ar' ? 'text-sm md:text-base lg:text-lg font-arabic' : 'text-base md:text-lg lg:text-xl'}`}>{lang === 'ar' ? 'حلول متطورة ومتكاملة تعزز الكفاءة التشغيلية والاستدامة البيئية' : 'Advanced integrated solutions enhancing operational efficiency and environmental sustainability'}</p>
  
      </h1>
    </div>
 
    <div class="flex flex-col sm:flex-row gap-6 justify-center mb-10 animate-hero-fade" style="animation-delay:0.3s;">
      <a href={`/${lang}/#contact`} class="hero-btn hero-btn-primary font-bold text-lg px-8 py-4">
        {lang === 'ar' ? 'ابدأ شراكتك معنا' : 'Start Your Partnership'}
      </a>
      <a href={`/${lang}/#services`} class="hero-btn hero-btn-secondary font-bold text-lg px-8 py-4">
        {lang === 'ar' ? 'استكشف حلولنا المتطورة' : 'Explore Our Solutions'}
      </a>
    </div>

    <!-- Premium Corporate Statistics - ARCOM Colors -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12 motion-element" data-motion="stats">
      <!-- Projects Achievement -->
      <div class="enterprise-stat-card group">
        <div class="stat-icon-enterprise mb-4">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
        </div>
        <div class={`stat-number-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`} data-target="1500">1500+</div>
        <div class={`stat-label-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`}>{lang === 'ar' ? 'مشروع ناجح' : 'Successful Projects'}</div>
        <div class="absolute inset-0 bg-gradient-to-t from-[#07D580]/20 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

      <!-- Corporate Experience -->
      <div class="enterprise-stat-card group">
        <div class="stat-icon-enterprise mb-4">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
          </svg>
        </div>
        <div class={`stat-number-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`} data-target="9">9+</div>
        <div class={`stat-label-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`}>{lang === 'ar' ? 'سنوات من التميز' : 'Years of Excellence'}</div>
        <div class="absolute inset-0 bg-gradient-to-t from-[#71D9F5]/20 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

      <!-- Service Portfolio -->
      <div class="enterprise-stat-card group">
        <div class="stat-icon-enterprise mb-4">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
          </svg>
        </div>
        <div class={`stat-number-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`} data-target="8">8</div>
        <div class={`stat-label-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`}>{lang === 'ar' ? 'خدمات متخصصة' : 'Specialized Services'}</div>
        <div class="absolute inset-0 bg-gradient-to-t from-[#71AFF5]/20 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

      <!-- 24/7 Excellence -->
      <div class="enterprise-stat-card group">
        <div class="stat-icon-enterprise mb-4">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class={`stat-number-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`} data-target="24">24/7</div>
        <div class={`stat-label-enterprise ${lang === 'ar' ? 'font-arabic' : ''}`}>{lang === 'ar' ? 'دعم متواصل' : 'Continuous Excellence'}</div>
        <div class="absolute inset-0 bg-gradient-to-t from-[#71F58C]/20 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>
    </div>
  </div>


</section>

<style>
  /* PROFESSIONAL MOTION FOUNDATION - CONTENT VISIBLE IMMEDIATELY */
  .motion-element {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Fallback animations for reliability - very subtle */
  @keyframes smoothFadeIn {
    0% { 
      opacity: 0.8; 
      transform: translateY(5px); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  /* Minimal staggered animation delays - content visible first */
  .motion-element[data-motion="main-title"] { animation: none; }
  .motion-element[data-motion="subtitle"] { animation: none; }
  .motion-element[data-motion="tagline"] { animation: none; }
  .motion-element[data-motion="divider"] { animation: none; }
  .motion-element[data-motion="value-prop"] { animation: none; }
  .motion-element[data-motion="ctas"] { animation: none; }
  .motion-element[data-motion="stats"] { animation: none; }
  .motion-element[data-motion="ribbon"] { animation: none; }

  /* Divider visible immediately */
  [data-motion="divider"] {
    opacity: 1;
    transform: scaleX(1);
  }

  .motion-button {
    transform: scale(1);
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .motion-button:hover {
    transform: scale(1.02) translateY(-1px);
  }
  
  .motion-button:active {
    transform: scale(0.98);
    transition: transform 0.1s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* FORTUNE 500 TYPOGRAPHY */
  .hero-title-enterprise {
    text-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
    filter: drop-shadow(0 4px 20px rgba(7,213,128,0.3));
  }

  /* REFINED ENTERPRISE CTAs - PROFESSIONAL PRIMARY BUTTON */
  .enterprise-cta-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 3rem;
    background: linear-gradient(135deg, #047C46 0%, #059656 50%, #07D580 100%);
    color: white;
    font-weight: 700;
    font-size: 1.125rem;
    border-radius: 2rem;
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 
      0 12px 30px rgba(4,124,70,0.25),
      0 6px 15px rgba(7,213,128,0.15),
      inset 0 1px 0 rgba(255,255,255,0.1);
    transform: scale(1);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
    min-width: 280px;
    text-decoration: none;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  /* Animated gradient background */
  .enterprise-cta-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent,
      rgba(255,255,255,0.2),
      transparent
    );
    transition: left 0.8s ease;
  }

  .enterprise-cta-primary:hover::before {
    left: 100%;
  }

  /* Refined glow effect */
  .enterprise-cta-primary::after {
    content: '';
    position: absolute;
    inset: -1px;
    background: linear-gradient(135deg, #047C46, #059656, #047C46);
    border-radius: 2rem;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
    filter: blur(4px);
  }

  .enterprise-cta-primary:hover::after {
    opacity: 0.3;
  }

  .enterprise-cta-primary:hover {
    transform: scale(1.02) translateY(-2px);
    box-shadow: 
      0 18px 40px rgba(4,124,70,0.3),
      0 8px 20px rgba(5,150,86,0.2),
      inset 0 1px 0 rgba(255,255,255,0.15);
    background: linear-gradient(135deg, #059656 0%, #07D580 50%, #08E089 100%);
    border-color: rgba(255,255,255,0.15);
  }

  .enterprise-cta-primary:active {
    transform: scale(0.98) translateY(-2px);
    transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  }



  .enterprise-cta-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 3rem;
    background: rgba(255, 255, 255, 0.08);
    color: white;
    font-weight: 600;
    font-size: 1.1rem;
    border-radius: 2rem;
    border: 2px solid rgba(7,213,128,0.4);
    backdrop-filter: blur(20px);
    transform: scale(1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    min-width: 280px;
    text-decoration: none;
  }

  .enterprise-cta-secondary:hover {
    background: rgba(7,213,128,0.15);
    border-color: rgba(7,213,128,0.8);
    transform: scale(1.03) translateY(-3px);
    box-shadow: 0 20px 60px rgba(7,213,128,0.3);
    color: #F5FCF8;
  }

  .enterprise-cta-secondary:active {
    transform: scale(0.98) translateY(-1px);
    transition: all 0.1s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* PREMIUM ENTERPRISE STATISTICS */
  .enterprise-stat-card {
    position: relative;
    text-align: center;
    padding: 2rem 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    opacity: 1;
    transform: translateY(0);
  }

  .enterprise-stat-card:nth-child(1) { animation: none; }
  .enterprise-stat-card:nth-child(2) { animation: none; }
  .enterprise-stat-card:nth-child(3) { animation: none; }
  .enterprise-stat-card:nth-child(4) { animation: none; }

  .enterprise-stat-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(7,213,128,0.3);
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
  }

  .stat-icon-enterprise {
    display: flex;
    justify-content: center;
    color: #07D580;
    filter: drop-shadow(0 4px 12px rgba(7,213,128,0.4));
  }

  .stat-number-enterprise {
    font-weight: 800;
    font-size: 2.5rem;
    background: linear-gradient(135deg, #07D580, #71D9F5);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0.5rem;
    filter: drop-shadow(0 2px 8px rgba(7,213,128,0.3));
  }

  .stat-label-enterprise {
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    font-size: 0.875rem;
    line-height: 1.4;
  }

  /* CUSTOM GRADIENT UTILITIES */
  .bg-gradient-radial {
    background-image: radial-gradient(circle, var(--tw-gradient-stops));
  }

  .bg-radial-gradient {
    background-image: radial-gradient(circle at center, var(--tw-gradient-stops));
  }

  /* ARABIC TYPOGRAPHY ENHANCEMENTS */
  .font-arabic {
    font-family: 'Tajawal', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1;
    letter-spacing: 0.02em;
    line-height: 1.6;
  }

  .font-arabic .hero-title-enterprise {
    font-weight: 900;
    letter-spacing: 0.01em;
  }

  .font-arabic .stat-number-enterprise {
    font-weight: 800;
    font-feature-settings: 'tnum' 1;
  }

  .font-arabic .stat-label-enterprise {
    font-weight: 600;
    line-height: 1.5;
  }

  /* RTL ENTERPRISE IMPROVEMENTS */
  [dir="rtl"] .enterprise-cta-primary,
  [dir="rtl"] .enterprise-cta-secondary {
    text-align: center;
  }

  /* Perfect Animation Initialization */
  [data-motion="main-title"],
  [data-motion="subtitle"], 
  [data-motion="tagline"],
  [data-motion="divider"],
  [data-motion="value-prop"],
  [data-motion="primary-cta"],
  [data-motion="secondary-cta"],
  [data-motion="ribbon"],
  .enterprise-stat-card {
    opacity: 0;
  }

  /* Smooth transitions for enhanced UX */
  .motion-button,
  .enterprise-cta-primary,
  .enterprise-cta-secondary {
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .stat-icon-enterprise,
  .stat-number-enterprise {
    transition: all 0.3s ease-out;
  }

  @keyframes heroFadeInUp {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  .animate-hero-fade {
    opacity: 0;
    animation: heroFadeInUp 0.8s cubic-bezier(0.4,0,0.2,1) forwards;
  }
  .hero-title-enterprise {
    text-shadow: 0 4px 24px rgba(7,213,128,0.18),0 2px 8px rgba(0,0,0,0.18);
  }
</style>

<script type="module">
  // Import Motion One from CDN - this works in browser module scripts
  import { animate, stagger, scroll, inView } from "https://cdn.jsdelivr.net/npm/motion@12.18.1/+esm";

  console.log('Motion One imported successfully');

  // Perfect professional animations with Motion One
  document.addEventListener('DOMContentLoaded', () => {
    
    // Perfect entrance animations with sophisticated timing
    const createPerfectAnimations = () => {
      // Hero title sequence - stunning entrance
      animate(
        '[data-motion="main-title"]',
        { 
          opacity: [0, 1],
          y: [30, 0],
          scale: [0.95, 1.02, 1]
        },
        { 
          duration: 1.2, 
          easing: [0.25, 0.46, 0.45, 0.94],
          delay: 0.2 
        }
      );

      // Subtitle elegant emergence
      animate(
        '[data-motion="subtitle"]',
        { 
          opacity: [0, 1],
          y: [20, 0],
          scale: [0.98, 1]
        },
        { 
          duration: 0.8, 
          easing: "easeOut",
          delay: 0.6 
        }
      );

      // Tagline smooth appearance
      animate(
        '[data-motion="tagline"]',
        { 
          opacity: [0, 1],
          y: [15, 0]
        },
        { 
          duration: 0.6, 
          easing: "easeOut",
          delay: 0.9 
        }
      );

      // Divider elegant glow animation
      animate(
        '[data-motion="divider"]',
        { 
          opacity: [0, 1],
          scaleX: [0, 1],
          boxShadow: [
            '0 0 0px rgba(7, 213, 128, 0)',
            '0 0 20px rgba(7, 213, 128, 0.5)',
            '0 0 10px rgba(7, 213, 128, 0.3)'
          ]
        },
        { 
          duration: 1.5, 
          easing: [0.25, 0.46, 0.45, 0.94],
          delay: 1.1 
        }
      );

      // Value proposition smooth entrance
      animate(
        '[data-motion="value-prop"]',
        { 
          opacity: [0, 1],
          y: [25, 0]
        },
        { 
          duration: 0.8, 
          easing: "easeOut",
          delay: 1.3 
        }
      );

      // CTA buttons stunning entrance with stagger
      animate(
        '[data-motion="primary-cta"]',
        { 
          opacity: [0, 1],
          y: [30, 0],
          scale: [0.9, 1]
        },
        { 
          duration: 0.7, 
          easing: [0.25, 0.46, 0.45, 0.94],
          delay: 1.5 
        }
      );

      animate(
        '[data-motion="secondary-cta"]',
        { 
          opacity: [0, 1],
          y: [30, 0],
          scale: [0.9, 1]
        },
        { 
          duration: 0.7, 
          easing: [0.25, 0.46, 0.45, 0.94],
          delay: 1.7 
        }
      );

      // Stats cards magnificent entrance
      animate(
        '.enterprise-stat-card',
        { 
          opacity: [0, 1],
          y: [40, 0],
          scale: [0.9, 1]
        },
        { 
          duration: 0.8, 
          easing: [0.25, 0.46, 0.45, 0.94],
          delay: stagger(0.1, { start: 1.8 })
        }
      );

      // Service ribbon elegant slide-up
      animate(
        '[data-motion="ribbon"]',
        { 
          opacity: [0, 1],
          y: [50, 0]
        },
        { 
          duration: 0.8, 
          easing: "easeOut",
          delay: 2.2 
        }
      );
    };

    // Initialize perfect animations
    createPerfectAnimations();
    
    // Ensure hero content stays visible after entrance animations
