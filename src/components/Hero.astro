      const motionElements = document.querySelectorAll('.motion-element, .enterprise-stat-card');
      motionElements.forEach(el => {
        if (el.style.opacity === '0' || window.getComputedStyle(el).opacity === '0') {
          el.style.animation = 'smoothFadeIn 0.8s ease-out forwards';
          el.style.opacity = '1';
        }
      });
    }, 2000);

    // Basic stat counting fallback
    const observeStats = () => {
      const statCards = document.querySelectorAll('.enterprise-stat-card');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const numberElement = entry.target.querySelector('.stat-number-enterprise[data-target]');
            if (numberElement && !numberElement.hasAttribute('data-animated')) {
              numberElement.setAttribute('data-animated', 'true');
              
              const targetValue = numberElement.getAttribute('data-target');
              if (targetValue && !targetValue.includes('/')) {
                const finalValue = parseInt(targetValue.replace('+', ''));
                if (!isNaN(finalValue)) {
                  let currentValue = 0;
                  const increment = finalValue / 50;
                  const timer = setInterval(() => {
                    currentValue += increment;
                    if (currentValue >= finalValue) {
                      currentValue = finalValue;
                      clearInterval(timer);
                    }
                    numberElement.textContent = Math.round(currentValue) + (targetValue.includes('+') ? '+' : '');
                  }, 30);
                }
              }
            }
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.3 });
      
      statCards.forEach(card => observer.observe(card));
    };

    observeStats();
  });
</script> 